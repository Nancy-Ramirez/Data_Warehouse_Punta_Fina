# ============================================================================
# CONFIGURACIÓN DE CONEXIONES - PUNTAFINA ETL BATCH
# ============================================================================
# IMPORTANTE: Este es un archivo de ejemplo. Copia este archivo a .env
# y configura con tus credenciales reales.

# Base de datos OroCommerce (FUENTE)
ORO_DB_HOST=localhost
ORO_DB_PORT=5432
ORO_DB_NAME=oro_commerce
ORO_DB_USER=oro_user
ORO_DB_PASS=cambiar_password_aqui

# Base de datos OroCRM (FUENTE)
CRM_DB_HOST=localhost
CRM_DB_PORT=5432
CRM_DB_NAME=oro_crm
CRM_DB_USER=oro_user
CRM_DB_PASS=cambiar_password_aqui

# Base de datos Data Warehouse (DESTINO)
DW_ORO_DB_HOST=localhost
DW_ORO_DB_PORT=5432
DW_ORO_DB_NAME=DW_oro
DW_ORO_DB_USER=dw_user
DW_ORO_DB_PASS=cambiar_password_aqui

# Configuración SSL para PostgreSQL (opcional)
# DW_ORO_DB_SSLMODE=require
# DW_ORO_DB_SSLROOTCERT=/path/to/ca-certificate.crt

# Configuración de ETL
ETL_BATCH_SIZE=1000
ETL_MAX_WORKERS=4
ETL_LOG_LEVEL=INFO

# Rutas (relativas al directorio del proyecto)
ETL_INPUT_PATH=data/inputs
ETL_OUTPUT_PATH=data/outputs
ETL_STAGING_PATH=data/staging
ETL_LOG_PATH=logs/etl

# Variables de entorno del sistema
PYTHONUNBUFFERED=1
LANG=en_US.UTF-8
LC_ALL=en_US.UTF-8

# Configuración de timeouts (segundos)
ETL_CONNECTION_TIMEOUT=30
ETL_QUERY_TIMEOUT=300
ETL_BATCH_TIMEOUT=600

# Configuración de memoria
ETL_MAX_MEMORY_MB=512
ETL_ENABLE_MEMORY_PROFILING=false

# Configuración de recuperación
ETL_ENABLE_CHECKPOINTS=true
ETL_CHECKPOINT_INTERVAL=100
ETL_RESUME_ON_FAILURE=true

# Configuración de monitoreo
ETL_ENABLE_METRICS=true
ETL_METRICS_INTERVAL=60
ETL_ENABLE_ALERTS=false

# Configuración de notificaciones (opcional)
# ETL_EMAIL_HOST=smtp.gmail.com
# ETL_EMAIL_PORT=587
# ETL_EMAIL_USER=tu_email@gmail.com
# ETL_EMAIL_PASS=tu_password
# ETL_EMAIL_FROM=etl@puntafina.com
# ETL_EMAIL_TO=admin@puntafina.com

# Configuración de Slack (opcional)
# ETL_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# ETL_SLACK_CHANNEL=#etl-alerts
